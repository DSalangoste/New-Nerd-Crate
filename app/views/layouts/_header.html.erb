<header class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <!-- Logo -->
    <%= link_to "NerdCrate", root_path, class: "navbar-brand" %>
    
    <!-- Navigation -->
    <nav class="navbar-nav me-auto mb-0">
      <%= link_to "Home", root_path, class: "nav-link text-light" %>
      <%= link_to "Categories", categories_path, class: "nav-link text-light" %>
      <%= link_to "About", about_path, class: "nav-link text-light" %>
      <%= link_to "Contact", contact_path, class: "nav-link text-light" %>
      <%= link_to cart_path, class: "nav-link text-light d-flex align-items-center" do %>
        Shopping Cart
        <% if current_cart.any? %>
          <span class="badge bg-danger rounded-pill ms-2">
            <%= current_cart.size %>
          </span>
        <% end %>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to "My Account", edit_user_registration_path, class: "nav-link text-light" %>
        <%= link_to "My Orders", orders_path, class: "nav-link text-light" %>
      <% end %>
      <% if admin_user_signed_in? %>
        <%= link_to "Admin Panel", admin_root_path, class: "nav-link text-warning" %>
      <% end %>
    </nav>

    <!-- Auth Links -->
    <div class="d-flex align-items-center">
      <% if user_signed_in? %>
        <%= button_to "Log Out", destroy_user_session_path, 
            method: :delete, 
            class: "btn btn-outline-light ms-2" %>
      <% else %>
        <%= link_to "Log In", new_user_session_path, 
            class: "btn btn-outline-light me-2" %>
        <%= link_to "Sign Up", new_user_registration_path, 
            class: "btn btn-light" %>
      <% end %>
    </div>
  </div>
</header> 