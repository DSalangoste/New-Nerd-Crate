<div class="container py-5">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Categories", categories_path %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @category.name %></li>
    </ol>
  </nav>

  <h1 class="mb-4"><%= @category.name %></h1>
  <p class="lead mb-5"><%= @category.description %></p>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @category.crate_types.each do |crate| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= crate.name %></h5>
            <p class="card-text"><%= crate.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <span class="h5 mb-0">$<%= number_with_precision(crate.price, precision: 2) %></span>
              <%= link_to "View Details", crate_type_path(crate), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>