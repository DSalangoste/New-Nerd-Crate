<div class="container py-4">
  <%= render 'shared/breadcrumbs' %>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <% if @crate_type.image.attached? %>
            <div class="position-relative" style="height: 400px;">
              <%= image_tag url_for(@crate_type.medium), 
                          class: "w-100 h-100 object-fit-cover",
                          alt: @crate_type.name %>
            </div>
          <% else %>
            <div class="h-100 bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
              <span class="text-secondary fs-5">No image available</span>
            </div>
          <% end %>
        </div>
        
        <div class="col-md-6">
          <div class="d-flex flex-column h-100">
            <div class="mb-4">
              <% @crate_type.categories.each do |category| %>
                <span class="badge bg-primary me-2"><%= category.name %></span>
              <% end %>
            </div>
            
            <h1 class="display-5 fw-bold mb-4"><%= @crate_type.name %></h1>
            
            <div class="mb-4">
              <span class="display-6 text-primary"><%= number_to_currency(@crate_type.price) %></span>
            </div>
            
            <div class="mb-4">
              <p class="lead"><%= @crate_type.description %></p>
            </div>
            
            <div class="mt-auto">
              <%= button_to add_cart_path(crate_type_id: @crate_type.id), 
                  class: "btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="me-2" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Add to Cart
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="text-center mt-4">
    <%= link_to "← Back to Homepage", root_path, class: "btn btn-outline-primary" %>
  </div>
</div> 