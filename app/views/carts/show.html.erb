<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Your Shopping Cart</h1>

  <% if @cart_items.empty? %>
    <div class="bg-white shadow-md rounded p-6">
      <p class="text-gray-600 mb-4">Your cart is empty</p>
      <%= link_to "Browse Crates", root_path, class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition duration-200" %>
    </div>
  <% else %>
    <div class="bg-white shadow-md rounded overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left">Crate</th>
            <th class="px-6 py-3 text-left">Quantity</th>
            <th class="px-6 py-3 text-left">Price</th>
            <th class="px-6 py-3 text-left">Total</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @cart_items.each_with_index do |item, index| %>
            <tr>
              <td class="px-6 py-4">
                <div>
                  <div class="font-medium"><%= item[:crate_type].name %></div>
                  <div class="text-gray-500"><%= item[:crate_type].description %></div>
                </div>
              </td>
              <td class="px-6 py-4">
                <%= form_tag update_quantity_cart_path, method: :patch, class: "flex items-center space-x-2" do %>
                  <%= hidden_field_tag :index, index %>
                  <%= number_field_tag :quantity, item[:quantity], min: 1, class: "w-20 rounded border-gray-300" %>
                  <%= submit_tag "Update", class: "bg-gray-200 px-3 py-1 rounded hover:bg-gray-300" %>
                <% end %>
              </td>
              <td class="px-6 py-4"><%= number_to_currency(item[:crate_type].price) %></td>
              <td class="px-6 py-4"><%= number_to_currency(item[:total]) %></td>
              <td class="px-6 py-4">
                <%= button_to "Remove", remove_cart_path(index: index), 
                    method: :delete,
                    class: "text-red-500 hover:text-red-700",
                    data: { confirm: "Are you sure?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-50">
          <tr>
            <td colspan="3" class="px-6 py-4 font-medium">Total:</td>
            <td colspan="2" class="px-6 py-4 font-medium"><%= number_to_currency(@cart_total) %></td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="mt-6 flex justify-between items-center">
      <%= link_to "Continue Shopping", root_path, class: "text-blue-500 hover:text-blue-700" %>
      <%= link_to checkout_index_path, class: "bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600 transition duration-200" do %>
        Proceed to Checkout
      <% end %>
    </div>
  <% end %>
</div>