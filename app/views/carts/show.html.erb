<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Your Shopping Cart</h1>

  <% if @cart_items.empty? %>
    <div class="bg-gray-50 rounded-lg p-8 text-center">
      <p class="text-gray-600 mb-4">Your cart is empty</p>
      <%= link_to "Browse Crates", root_path, 
          class: "inline-block px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Crate</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @cart_items.each_with_index do |item, index| %>
            <tr>
              <td class="px-6 py-4">
                <div class="flex items-center">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= item[:crate_type].name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= truncate(item[:crate_type].description, length: 100) %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <%= form_tag update_quantity_cart_path, method: :patch, class: "flex items-center space-x-2" do %>
                  <%= hidden_field_tag :index, index %>
                  <div class="flex items-center">
                    <%= number_field_tag :quantity, item[:quantity], 
                        min: 1,
                        class: "w-16 px-2 py-1 border rounded text-center" %>
                    <%= submit_tag "Update", 
                        class: "ml-2 px-3 py-1 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <%= number_to_currency(item[:crate_type].price) %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500">
                <%= number_to_currency(item[:total]) %>
              </td>
              <td class="px-6 py-4 text-right text-sm font-medium">
                <%= button_to "Remove", remove_cart_path(index: index), 
                    method: :delete,
                    class: "text-red-600 hover:text-red-900",
                    data: { confirm: "Are you sure?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-50">
          <tr>
            <td colspan="3" class="px-6 py-4 text-right text-sm font-medium text-gray-900">Total:</td>
            <td colspan="2" class="px-6 py-4 text-sm text-gray-900">
              <%= number_to_currency(@cart_total) %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="mt-6 flex justify-end space-x-4">
      <%= link_to "Continue Shopping", root_path, 
          class: "px-6 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
      <%= link_to "Proceed to Checkout", "#", 
          class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>
  <% end %>
</div> 