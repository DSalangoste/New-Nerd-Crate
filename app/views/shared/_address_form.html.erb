<%# Address form partial %>
<div class="mb-4">
  <h3 class="h6 mb-3"><%= title %> Address</h3>
  
  <div class="mb-3">
    <label for="<%= prefix %>_first_name" class="form-label">First Name</label>
    <input type="text" 
           id="<%= prefix %>_first_name"
           name="<%= prefix %>[first_name]" 
           value="<%= address&.first_name %>" 
           class="form-control" 
           required>
  </div>
  
  <div class="mb-3">
    <label for="<%= prefix %>_last_name" class="form-label">Last Name</label>
    <input type="text" 
           id="<%= prefix %>_last_name"
           name="<%= prefix %>[last_name]" 
           value="<%= address&.last_name %>" 
           class="form-control" 
           required>
  </div>
  
  <div class="mb-3">
    <label for="<%= prefix %>_address_line_1" class="form-label">Street Address</label>
    <input type="text" 
           id="<%= prefix %>_address_line_1"
           name="<%= prefix %>[address_line_1]" 
           value="<%= address&.address_line_1 %>" 
           class="form-control" 
           required>
  </div>
  
  <div class="mb-3">
    <label for="<%= prefix %>_city" class="form-label">City</label>
    <input type="text" 
           id="<%= prefix %>_city"
           name="<%= prefix %>[city]" 
           value="<%= address&.city %>" 
           class="form-control" 
           required>
  </div>
  
  <div class="mb-3">
    <label for="<%= prefix %>_state" class="form-label">Province</label>
    <select id="<%= prefix %>_state"
            name="<%= prefix %>[state]" 
            class="form-select" 
            required>
      <option value="">Select Province</option>
      <% Province.all.each do |province| %>
        <option value="<%= province.code %>" 
                <%= 'selected' if address&.province&.code == province.code %>>
          <%= province.name %>
        </option>
      <% end %>
    </select>
  </div>
  
  <div class="mb-3">
    <label for="<%= prefix %>_postal_code" class="form-label">Postal Code</label>
    <input type="text" 
           id="<%= prefix %>_postal_code"
           name="<%= prefix %>[postal_code]" 
           value="<%= address&.postal_code %>" 
           class="form-control" 
           required>
  </div>
  
  <div class="mb-3">
    <label for="<%= prefix %>_phone" class="form-label">Phone Number</label>
    <input type="tel" 
           id="<%= prefix %>_phone"
           name="<%= prefix %>[phone]" 
           value="<%= address&.phone %>" 
           class="form-control" 
           required>
  </div>
</div> 