<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-5">Welcome to NerdCrate</h1>
      <p class="text-center lead mb-5">Choose from our curated selection of premium nerd culture crates!</p>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @crate_types.each do |crate| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= crate.name %></h5>
            <p class="card-text"><%= crate.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <span class="h5 mb-0"><%= number_to_currency(crate.price) %></span>
              <%= link_to "View Details", crate_type_path(crate), class: "btn btn-primary" %>
            </div>
          </div>
          <% if crate.categories.any? %>
            <div class="card-footer">
              <small class="text-muted">
                Categories: <%= crate.categories.map(&:name).join(", ") %>
              </small>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
